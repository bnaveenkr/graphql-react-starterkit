{
  "name": "graphql-react-starterkit",
  "version": "1.0.0",
  "description": "Startkit for creating a react+graphql application",
  "options": {
    "mocha": "-r test/test_helper.js --recursive src/**/*.test.js"
  },
  "scripts": {
    "watch:dev": "NODE_PATH=$NODE_PATH:./src/common webpack-dev-server --hot --inline --port 3000 --config webpack/config.dev.js",
    "start:dev": "NODE_ENV='development' NODE_PATH=$NODE_PATH:./src/common node .",
    "dev": "NODE_ENV='development' yarn run watch:dev yarn run start:dev",
    "test": "NODE_PATH=$NODE_PATH:./src/common nyc mocha -r test/test_helper.js --recursive src/**/*.test.js",
    "test:cov": "rimraf ./coverage && NODE_PATH=$NODE_PATH:./src/common nyc mocha -r test/test_helper.js --recursive src/**/*.test.js",
    "test:watch": "yarn run test -- --watch",
    "coverage": "yarn report --reporter=text-lcov",
    "coverage:notify": "yarn run coverage -- --watch --notify",
    "lint": "sass-lint -v 'src/**/*.scss' && eslint src",
    "build": "webpack --colors --display-error-details --config=webpack/config.prod.js",
    "build:debug": "webpack --verbose --debug --colors --display-error-details --config=webpack/config.prod.js",
    "start": "NODE_ENV='production' NODE_PATH=$NODE_PATH:./src/common node ."
  },
  "private": true,
  "dependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-react-constant-elements": "^7.0.0",
    "@babel/plugin-transform-react-inline-elements": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@fortawesome/fontawesome": "^1.1.4",
    "@fortawesome/fontawesome-free-brands": "^5.0.8",
    "@fortawesome/fontawesome-free-solid": "^5.0.8",
    "@fortawesome/react-fontawesome": "0.0.17",
    "apollo-cache-inmemory": "^1.1.12",
    "apollo-client": "^2.2.8",
    "apollo-link": "^1.2.3",
    "apollo-link-context": "^1.0.7",
    "apollo-link-http": "^1.5.3",
    "apollo-link-schema": "^1.0.6",
    "apollo-server-express": "^1.3.6",
    "apollo-utilities": "^1.0.11",
    "babel-plugin-syntax-trailing-function-commas": "^6.22.0",
    "body-parser": "^1.18.2",
    "classnames": "^2.2.5",
    "compression": "^1.7.1",
    "dataloader": "^1.3.0",
    "express": "^4.16.4",
    "graphql": "^0.11.7",
    "graphql-tag": "^1.3.2",
    "graphql-tools": "^2.11.0",
    "helmet": "^3.9.0",
    "immutability-helper": "^2.5.1",
    "immutable": "^3.8.2",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.19.3",
    "nconf": "^0.9.1",
    "normalize.css": "^7.0.0",
    "prop-types": "^15.6.0",
    "react": "^16.5.2",
    "react-apollo": "^2.1.3",
    "react-css-themr": "^2.1.2",
    "react-dom": "^16.5.2",
    "react-hot-loader": "^4.3.11",
    "react-router-dom": "^4.2.2",
    "throttle-debounce": "^1.0.1",
    "webpack-isomorphic-tools": "^3.0.5",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/runtime": "^7.1.2",
    "autoprefixer": "^9.2.1",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.0",
    "casual": "^1.5.19",
    "chai": "^3.5.0",
    "chai-immutable": "^1.6.0",
    "clean-webpack-plugin": "^0.1.17",
    "css-loader": "^0.28.7",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^5.7.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "jsdom": "^11.5.1",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^0.4.4",
    "mocha": "^3.2.0",
    "node-sass": "^4.9.0",
    "nyc": "^13.1.0",
    "piping": "^1.0.0-rc.4",
    "postcss-discard-comments": "^2.0.4",
    "postcss-loader": "^2.0.9",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.1.0",
    "sinon": "^4.1.2",
    "sinon-chai": "^2.14.0",
    "style-loader": "^0.19.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "nyc": {
    "exclude": [
      "src/**/*test.js"
    ],
    "include": [
      "src/**/*.js"
    ],
    "all": true,
    "reporter": [
      "lcov",
      "text-summary",
      "html"
    ],
    "report-dir": "./coverage"
  }
}
