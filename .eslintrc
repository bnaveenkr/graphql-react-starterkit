{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2
  },
  "plugins": [
    "react"
  ],
  "env": {
    "node": true,
    "mocha": true,
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "./src/common"
        ]
      }
    }
  }
}
